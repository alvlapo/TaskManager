<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jeffgabriel.TaskManager"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="10" />

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name" >
        <provider
            android:name=".TaskProvider"
            android:authorities="com.jeffgabriel.TaskManager.TaskProvider;com.jeffgabriel.TaskManager" />

        <activity
            android:name=".TaskManagerActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Options"
            android:label="@string/settingsMenuItem" >
        </activity>
        <activity
            android:name=".CreateTaskActivity"
            android:label="@string/addTaskLabel" >
            <intent-filter>
                <category android:name="android.intent.category.EDIT" />
                <action android:name="android.intent.action.INSERT" />
                <data android:mimeType="vnd.android.cursor.item/Task" />
            </intent-filter>
        </activity>

        <receiver android:name=".AlarmReceiver" >
        </receiver>
    </application>

</manifest>